
<!-- Include header from partials/header -->
<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <!-- In our EJS file, we have a for loop to loop through our array of all posts, and build an <li> from them.
            Each <li> is an anchor tag (<a>) to that specific post's route, identified by plugging in the specific post id.
            Each <img> is a ref. to the image in the db, OR the cloudinary link to the image
        -->
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<!-- Include footer from partials/header -->
<%- include('partials/footer') -%>